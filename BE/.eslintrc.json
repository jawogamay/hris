{
  "extends": ["plugin:adonis/typescriptApp", "prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "semi": 1,
    "no-extra-semi": 1,
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, { "named": "never", "asyncArrow": "always" }],
    "space-in-parens": [1, "never"],
    "spaced-comment": 0,
    "no-useless-escape": 0,
    "template-curly-spacing": [1, "never"],
    "quotes": [1, "single", { "allowTemplateLiterals": true }]
  }
}
